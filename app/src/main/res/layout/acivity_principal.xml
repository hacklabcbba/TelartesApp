<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_header">

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/plomo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/plomo_normal" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/btn_noticias"
            android:background="@drawable/btn_selector_noticias">

            <ImageView
                android:id="@+id/img_noticias"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"
                android:padding="25dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/noticias" />

            <TextView
                android:id="@+id/txt_noticia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="NOTICIAS"
                android:gravity="left|center_horizontal"
                android:paddingLeft="30dp"
                android:textColor="@color/blanco"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:weightSum="1"
            android:background="@color/blanco" />

        <LinearLayout
            android:id="@+id/btn_agenda"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_selector_agenda"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_agenda"
                android:layout_width="111dp"
                android:layout_height="179dp"
                android:background="@android:color/transparent"
                android:padding="25dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/agenda_cultural" />

            <TextView
                android:id="@+id/txt_agenda"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:text="AGENDA CULTURAL"
                android:gravity="left|center_horizontal"
                android:paddingLeft="30dp"
                android:textColor="@color/blanco"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_weight="0.12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blanco" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/btn_convocatoria"
            android:orientation="horizontal"
            android:background="@drawable/btn_selector_convocatorias">

            <ImageView
                android:id="@+id/img_convocatoria"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"
                android:padding="25dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/convocatoria" />

            <TextView
                android:id="@+id/txt_convocatoria"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CONVOCATORIAS"
                android:gravity="left|center_horizontal"
                android:paddingLeft="30dp"
                android:textColor="@color/blanco"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>