<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco">
    <include
        layout="@layout/view_header_share"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight = "1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:weightSum="4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Noticia de ultimo momento"
                android:id="@+id/txt_da_titulo"
                android:maxLines="2"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/txt_da_fecha" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/img_da_agenda"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/none"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Departamento:Cochabamba"
                android:id="@+id/txt_da_departamento" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/txt_da_fecha_evento" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Convocante:"
                android:id="@+id/txt_da_costo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/txt_da_lugar" />
            <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/txt_da_descripcion"
                android:textAppearance="?android:attr/textAppearanceSmall"
                ext:documentView_antialias="true"
                ext:documentView_cacheConfig="auto_quality"
                ext:documentView_hyphen="-"
                ext:documentView_maxLines="100"
                ext:documentView_offsetX="5dp"
                ext:documentView_offsetY="5dp"
                ext:documentView_insetPadding="5dp"
                ext:documentView_insetPaddingBottom="5dp"
                ext:documentView_insetPaddingLeft="5dp"
                ext:documentView_insetPaddingRight="5dp"
                ext:documentView_insetPaddingTop="5dp"
                ext:documentView_reverse="false"
                ext:documentView_textAlignment="justified"
                ext:documentView_textColor="@android:color/black"
                ext:documentView_textFormat="plain"
                ext:documentView_textSize="16dp"
                ext:documentView_textSubPixel="true"
                ext:documentView_text="dfdsdfsd"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Enlace: "
                    android:id="@+id/textView5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=""
                    android:id="@+id/txt_da_enlace" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>