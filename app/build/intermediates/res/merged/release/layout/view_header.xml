<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blanco"
        android:weightSum="1" >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:src="@mipmap/header"
            android:layout_gravity="left"
            android:layout_weight="0.50"
            android:layout_marginBottom="3dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:gravity="right">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_setting"
                android:id="@+id/imageView4"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@mipmap/ic_information"

                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/baner"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/lila"
    android:orientation="horizontal"
    android:gravity="center" >



    <FrameLayout
    android:id="@+id/btn_atras"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:background="@drawable/btn_selector"
    android:layout_weight="0.5" >
    <ImageView
    android:id="@+id/imageView1"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/atras" />

    </FrameLayout>

    <TextView
    android:id="@+id/lbl_titulo"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:text="Impacto Tutor"
    android:textColor="@color/text_header"
    android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@mipmap/ic_menu"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/plomo_obscuro"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/plomo_normal"/>

</LinearLayout><!-- From: file:/home/noemi/martadero/telartes/app/src/main/res/layout/view_header.xml -->