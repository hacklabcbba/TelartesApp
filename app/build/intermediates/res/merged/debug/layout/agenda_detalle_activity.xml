<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco">
    <include
        layout="@layout/view_header_share"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight = "1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:weightSum="4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Titulo evento"
                android:id="@+id/txt_da_titulo"
                android:maxLines="2"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Miercoles, Abril 20, 2016"
                android:id="@+id/txt_da_fecha" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:id="@+id/img_da_agenda"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/none"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginTop="5dp"
                android:text="Departamento: Cochabamba"
                android:id="@+id/txt_da_departamento" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Fecha del evento"
                android:id="@+id/txt_da_fecha_evento" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Convocante: "
                android:id="@+id/txt_da_costo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Lugar"
                android:id="@+id/txt_da_lugar" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Contenido"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:id="@+id/txt_da_descripcion" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Enlace: "
                    android:id="@+id/txt_da_enlacetx" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=""
                    android:id="@+id/txt_da_enlace" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout><!-- From: file:/home/noemi/martadero/telartes/app/src/main/res/layout/agenda_detalle_activity.xml -->