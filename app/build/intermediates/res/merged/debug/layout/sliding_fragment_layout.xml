<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blanco">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanco"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Seleccionar:"
            android:id="@+id/textView13"
            />
        <com.b_tree.telartes.CircleCheckBox
            android:id="@+id/chbx"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            app:borderThickness="2dp"
            app:circleBorderColor="@color/lila"
            app:innerCircleColor="@color/lila"
            app:innerCircleRadius="14dp"
            app:outerCircleColor="@color/blanco"
            app:outerCircleRadius="6dp"
            app:showOuterCircle="true"
            app:textColor="@color/lila"
            app:textLeftPadding="5dp"
            app:textSize="16dp"
            app:tickColor="#ffffff"
            app:tickThickness="1dp"
            app:text="Todas" />
    </LinearLayout>
    <ListView
        android:id="@+id/list_filter"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/blanco"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/ver_noticias"
        android:layout_below="@+id/linearLayout" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ver_noticias"
        android:background="@color/plomo"
        android:text="VER NOTICIAS "
        android:textStyle="bold"
        android:textColor="@color/lila"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout><!-- From: file:/home/noemi/martadero/telartes/app/src/main/res/layout/sliding_fragment_layout.xml -->