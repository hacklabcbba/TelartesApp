<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blanco"
        android:weightSum="1" >


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@mipmap/telartes_menu"
            android:layout_gravity="left"
            android:layout_weight="0.50"
            android:scaleType="fitXY"
            android:padding="5dp"/>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/tuerca"
                android:id="@+id/menu_setting"
                android:layout_margin="5dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/imageView3"
                android:layout_toStartOf="@+id/imageView3" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@mipmap/info"
                android:layout_margin="5dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/img_share"
                android:layout_toStartOf="@+id/img_share" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/img_share"
                android:src="@mipmap/compartir"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/baner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/lila"
        android:orientation="horizontal"
        android:gravity="center" >



        <FrameLayout
            android:id="@+id/btn_atras"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_selector"
            android:layout_weight="0.5" >
            <ImageView
                android:id="@+id/imageView1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/atras" />

        </FrameLayout>

        <TextView
            android:id="@+id/lbl_titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Impacto Tutor"
            android:textColor="@color/text_header"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/plomo_normal"/>

</LinearLayout><!-- From: file:/home/noemi/martadero/telartes/app/src/main/res/layout/view_header_share.xml -->