<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blanco"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_a_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:maxLines="2"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_a_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <TextView
                android:id="@+id/txt_a_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:maxLines="2"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Cochabamba"
                android:textStyle="bold"
                android:id="@+id/txt_a_lugar" />

        </LinearLayout>
        <ImageView
            android:id="@+id/img_a_agenda"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:src="@mipmap/ruta"/>
    </LinearLayout>
</LinearLayout><!-- From: file:/home/noemi/martadero/telartes/app/src/main/res/layout/agenda_item.xml -->